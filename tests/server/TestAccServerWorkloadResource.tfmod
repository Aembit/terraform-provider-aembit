provider "aembit" {
}

resource "aembit_server_workload" "test" {
	name = "Unit Test 1 - Modified"
    description = "Description"
    is_active = true
	service_endpoint = {
		host = "unittest.testhost2.com"
		port = 443
        tls = true
		app_protocol = "HTTP"
		transport_protocol = "TCP"
		requested_port = 443
        requested_tls = true
		tls_verification = "full"
		authentication_config = {
			"method" = "HTTP Authentication"
			"scheme" = "Header"
			"config" = "X-Vault-Token"
		}
	}
    tags = {
        color = "orange"
        day   = "Tuesday"
    }
}

resource "aembit_server_workload" "test_wildcard" {
	name = "Unit Test 1 Wildcard - Modified"
    description = "Description"
    is_active = false
	service_endpoint = {
		host = "*.testhost2.com"
		port = 443
        tls = true
		app_protocol = "HTTP"
		transport_protocol = "TCP"
		requested_port = 443
        requested_tls = true
		tls_verification = "full"
		authentication_config = {
			"method" = "HTTP Authentication"
			"scheme" = "Bearer"
		}
	}
    tags = {
        color = "blue"
        day   = "Sunday"
    }
}

