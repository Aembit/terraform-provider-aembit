provider "aembit" {
}

resource "aembit_credential_provider_v2" "oauth_authHeader" {
	name = "TF Acceptance OAuth - Modified"
	is_active = true
	tags = {
        color = "orange"
        day   = "Tuesday"
    }
	oauth_client_credentials = {
		token_url = "https://aembit.io/token"
		client_id = "test_client_id"
		client_secret = "updated_test_client_secret"
		scopes = "test_scopes"
		credential_style = "authHeader"
		custom_parameters = [
			{
				key = "key"
				value = "value"
				value_type = "literal"
			},
			{
				key = "key2"
