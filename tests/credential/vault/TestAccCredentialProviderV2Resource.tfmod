provider "aembit" {
}

resource "aembit_credential_provider_v2" "vault" {
	name = "TF Acceptance Vault - Modified"
	is_active = true
    tags = {
        color = "orange"
        day   = "Tuesday"
    }
	vault_client_token = {
		subject = "subject"
		subject_type = "literal"
		lifetime = 60
		custom_claims = []
		vault_host = "vault.aembit.io"
		vault_port = 8200
		vault_tls = true
		vault_namespace = "vault_namespace"
		vault_path = "vault_path"
		vault_role = "vault_role"
		vault_forwarding = "conditional"
	}
}